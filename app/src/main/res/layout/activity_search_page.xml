<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Search Whole Sell Products"
        android:textAllCaps="true"
        android:textColor="#cc3300"
        android:textSize="26sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/QA_top_place"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Selected Tags: "
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/hor_tag_recycler_view">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSearchtext"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:background="@color/hpcolor"
            android:hint="Text Search"
            android:textSize="25dp"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="#cc3300"
            android:text="Search"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Switch
        android:id="@+id/Filter"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:checked="false"

        android:text="Filter:  "
        android:textColor="#cc3300"
        android:textColorHighlight="#cc3300"
        android:textColorLink="@color/hpcolor"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textColor="#cc3300"
            android:textSize="25sp" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/ettype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginTop="18dp"
            android:background="#FFB4A9"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color:"
            android:textColor="#cc3300"
            android:textSize="25sp" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/etcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginTop="18dp"
            android:background="#FFB4A9"

            />

    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textColor="#cc3300"
            android:textSize="25sp" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/etlocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginTop="18dp"
            android:background="#FFB4A9"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pref_Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>


</LinearLayout>