<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hpcolor"

    android:orientation="vertical"
    tools:context=".DokanSearh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        >


        <TextView
            android:id="@+id/textDokan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Dokan Search"
            android:textAllCaps="true"
            android:textColor="#cc3300"
            android:textSize="25sp"
            android:textStyle="bold" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/etSearchDokan"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="3"
                android:background="@drawable/round_back"
                android:hint="Text Search"
                android:textSize="15sp"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#000"
                android:drawablePadding="10dp"
                android:drawableLeft="@android:drawable/ic_menu_search"
                />

            <Button
                android:id="@+id/btDokanSearch"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/searchpage_button_back"
                android:text="Search"
                android:textColor="@color/hpcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/QA_top_place"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="Selected Tags: "
                android:textColor="#808080"
                android:textSize="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/hor_tag_recycler_view_v2">
            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/ettype_v2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:background="@android:color/white"
        >

    </LinearLayout>

    <ListView
        android:id = "@+id/listdokan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</LinearLayout>