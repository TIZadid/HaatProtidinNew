<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hpcolor"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".Profile">

    <TextView
        android:id="@+id/textusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USER NAME"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hagu@pagu.com"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/profilePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact No. : 01xxxxxxxxx"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Balance: "
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="4dp"
            android:text="tekar khela"
            android:textColor="@color/hpcolor"
            android:textSize="22dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Edit Profile"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Shops:"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:textStyle="bold" />


    <ListView
        android:id = "@+id/listdokan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>